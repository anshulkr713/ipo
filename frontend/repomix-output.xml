    const sNIIProfit = ipo.gmp * lotSizeNum;
    const bNIIProfit = ipo.gmp * lotSizeNum;

    const retailFinal = retailLotValue + retailProfit;
    const sNIIFinal = sNIILotValue + sNIIProfit;
    const bNIIFinal = bNIILotValue + bNIIProfit;

