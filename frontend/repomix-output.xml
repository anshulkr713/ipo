  --spacing-lg: clamp(1.5rem, 1.3rem + 0.75vw, 2.5rem);
  --spacing-xl: clamp(2rem, 1.7rem + 1.25vw, 4rem);

  /* Border Radius - Brutalist is sharp */
  --radius-sm: 0;
  --radius-md: 0;
  --radius-lg: 0;
  --radius-xl: 0;

  /* Brutalist Shadows - Hard offset shadows */
  --shadow-xs: 2px 2px 0 var(--black);
