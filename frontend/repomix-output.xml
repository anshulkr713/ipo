    const { data, error } = await supabase
        .from('ipo_calendar_events')
        .select(`
            *,
            ipos (
                ipo_name,
                company_name,
                category,
                slug
            )
        `)
        .gte('event_date', startDate)
        .lte('event_date', endDate)
        .order('event_date', { ascending: true });

    if (error) {
        console.error('Error fetching calendar events:', error);
        return [];
    }
    return data || [];
