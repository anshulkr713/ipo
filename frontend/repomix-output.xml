  --transition-base: all 0.15s ease;
  --transition-slow: all 0.2s ease;

  /* Typography */
  --font-heading: 'Archivo Black', sans-serif;
  --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  --font-mono: 'Space Mono', monospace;
}

