export async function fetchUpcomingIPOs() {
    try {
        const { data, error } = await supabase
            .from('vw_upcoming_ipos')
            .select('*')
            .order('open_date', { ascending: true });

        if (error) throw error;
        return data || [];
    } catch (error) {
        console.error('Error fetching upcoming IPOs:', error);
        return [];
    }
}

