        return [];
    }
}

// ============================================
// ALLOTMENT LINKS
// ============================================
export async function fetchAllotmentLinks(ipoName?: string) {
    try {
        let query = supabase
            .from('ipo_allotment_links')
            .select('*')
            .eq('is_active', true);

        if (ipoName) {
            query = query.eq('ipo_name', ipoName);
        }

        const { data, error } = await query.order('created_at', { ascending: false });

        if (error) throw error;
        return data || [];
    } catch (error) {
        console.error('Error fetching allotment links:', error);
        return [];
    }
}

// ============================================
// STATISTICS
// ============================================
export async function fetchDashboardStats() {
    try {
        // Count active IPOs
        const { count: activeCount } = await supabase
            .from('ipo_details')
            .select('*', { count: 'exact', head: true })
            .in('status', ['upcoming', 'open']);

        // Count total tracked
        const { count: totalCount } = await supabase
            .from('ipo_details')
            .select('*', { count: 'exact', head: true });

        // Calculate total issue size
        const { data: issueSizeData } = await supabase
            .from('ipo_details')
            .select('issue_size_numeric')
            .not('issue_size_numeric', 'is', null);

        const totalIssueSize = issueSizeData?.reduce((sum, item) => sum + (item.issue_size_numeric || 0), 0) || 0;

        // Calculate average subscription
        const { data: subscriptionData } = await supabase
            .from('ipo_details')
            .select('subscription_total')
            .not('subscription_total', 'is', null)
            .gte('subscription_total', 0);

        const avgSubscription = subscriptionData?.length
            ? subscriptionData.reduce((sum, item) => sum + (item.subscription_total || 0), 0) / subscriptionData.length
            : 0;

        return {
            activeIPOs: activeCount || 0,
            totalTracked: totalCount || 0,
            totalIssueSize: Math.round(totalIssueSize / 1000), // Convert to thousands of crores
            avgSubscription: Math.round(avgSubscription * 100) / 100,
        };
    } catch (error) {
        console.error('Error fetching dashboard stats:', error);
        return {
            activeIPOs: 0,
            totalTracked: 0,
            totalIssueSize: 0,
            avgSubscription: 0,
        };
    }
}

// ============================================
// SEARCH FUNCTION
// ============================================
export async function searchIPOs(searchTerm: string) {
    try {
        const { data, error } = await supabase
            .from('ipo_details')
            .select('*')
            .or(`ipo_name.ilike.%${searchTerm}%,company_name.ilike.%${searchTerm}%,category.ilike.%${searchTerm}%`)
            .order('open_date', { ascending: false })
            .limit(10);

        if (error) throw error;
        return data || [];
    } catch (error) {
        console.error('Error searching IPOs:', error);
        return [];
    }
}
